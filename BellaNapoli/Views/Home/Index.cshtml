@model IEnumerable<BellaNapoli.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@foreach (BellaNapoli.Models.Prodotti p in Model)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/Content/assets/img/@p.Foto" class="img-fluid rounded-start h-100 w-100" alt="fotopizze">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@p.NomeProdotto</h5>
                    <p class="card-text">@p.Ingredienti.</p>
                    <p class="card-text"><small class="text-body-secondary">€@p.CostoProdotto</small></p>
                    
                   @Html.ActionLink("Aggiungi al Carrello","AddCarrello","Home",new { id = p.IdProdotti },"")
                </div>
            </div>
        </div>
    </div>
}
